              <div class="btn-group" role="group">
                <button type="button" class="btn btn-secondary " style = "margin-left:15%; margin-bottom: 10% ;  width:100px;height:40px;" href= "/study-post-list">게시글</button>
                <button type="button" class="btn btn-outline-secondary " style = " margin-bottom:10%; width:100px;height:40px;" href = "/quiz-post-list">문제</button>
              </div>
            </div>
  
            <table class="table table-hover">
                <thead>
                  <tr>
                    <th scope="col">No.</th>
                    <th scope="col" style="width:70%;">제목</th>
                    <th scope="col">작성자</th>
                    <th scope="col" style="width:10%;">작성일</th>
                  </tr>
                </thead>

                <tbody>
                <script>
                  list();
                </script>
              </tbody>
            </table>
  
            <!-- page navigation -->
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <script>
                      makePageNav();  
                    </script>
                  </ul>
            </nav>
  
          </div>
        </div>
      </div>
