    <script>
      var study = <%- study %>;
      console.log(study);
      var boards = <%- boards %>;
      console.log(boards);

      var studyName = study.name;
      var studyInfo = study.info;
      
      // var boardName = boards.name;
      // var boardInfo = boards.info;
      // var boardweek = boards.week;
      // console.log(date);


      function boardList(){
        var boardArray = boards;
        document.write('<ul class="list-unstyled">');

        for(var i = 0; i<boardArray.length;i++){
        var mon = boardArray[i].deadline.split('.',3)[1];
        var mon_Eng = ["JAN", "FEB", "MAR", "APR", "MAY", "JUN", "JUl", "AUG", "SEP", "OCT", "NOV", "DEC"];
        var day = boardArray[i].deadline.split('.',3)[2];
        var year = 20+boardArray[i].deadline.split('.',3)[0];

        document.write('<li class="d-md-table mb-4 w-100 border-bottom hover-shadow">');
        document.write('<div class="d-md-table-cell text-center p-4 bg-primary text-white mb-4 mb-md-0">');                       
        document.write('<span class="h2 d-block">' + day + '</span> ' + mon_Eng[mon - 1] + ',' + year);
        document.write('</div>');
        document.write('<div class="d-md-table-cell px-4 vertical-align-middle mb-4 mb-md-0">');
                          
        document.write('<a href="notice-single" class="h4 mb-3 d-block week" >'+boardArray[i].week+"주차 "+boardArray[i].name+'</a>') ;      
        document.write('<ul class="list-styled mb-5">');
        // for(var j = 0; j<boardArray.info.length;j++){
          document.write('<li>'+boardArray[i].info+'</li>');
        // }
        document.write('</ul>');
        document.write('</div>');
        document.write('<div class="d-md-table-cell text-right pr-0 pr-md-4"><a href="/study-post-list/'+boardArray[i].id+'" class="btn btn-warning">참여하기</a></div>');
        document.write('</li>');
        }
        document.write('</ul>');


      function openAddWeek(){
        window.open('/add-study-week','studyweek','width=500,height=600,location=no,status=no,scrollbars=yes');
      }

            
  }

     </script>
