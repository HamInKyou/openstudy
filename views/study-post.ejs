              <div class = "col-lg-10">
          <script>
            document.write('<p class="display-4">My Study <i class="fas fa-chevron-right fa-sm"></i> '+studyName+'</p>');       
          </script>
          </div>
          <div class = "col-lg-6 col-mb-4" style = "margin-top:1%;">    
            <p></p>
        </div>
        </div>
            <script>
              document.write('<p class="lead">'+studyInfo+ '</p>');
            </script>
        </div>
